.container		
	&-fluid
		center-block()
		clearfix()
		position relative
		

		img
			img-responsive(inline-block)
	

	&-intro
		h3
			text-align center
	&-perfiles
		margin-bottom 2rem
		
		h2
			background-color $Magenta
			color #fff
			font-family $Alfa
			letter-spacing 0.3rem
			text-align center
			padding 1rem
			
			
	&-pasion
		
		.row
			path('bg-jovenes-pasion.jpg')
			background-size 100%
			background-repeat no-repeat
			padding-top 8rem
			
	&-programa
		h2
			background-color $Verde
			color #fff
			font-family $Alfa
			letter-spacing 0.3rem
			padding 1rem
			text-align center
			
			
	&-registro
		.mensaje
			text-align center
		.row
			path('bg-registro.jpg')
			background-size 100%
			background-position top center
			background-repeat no-repeat
			padding-top 11rem
			
			h2
				color $AzulClaro
				margin 0rem auto 0
				text-transform uppercase
				text-align center
				text-shadow 0px 0px 5px rgba(255,255,255,.6)
		
	&-vacantes
		h2
			font-family $Alfa
			letter-spacing 0.3rem	
			padding 1rem
			text-align center
